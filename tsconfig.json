{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"skipLibCheck": true,
		"types": ["vite/client"]
	},

	"include": ["vite.config.*", "env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.tsx", "types"]
}
